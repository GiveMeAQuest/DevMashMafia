span(ng-if='loading')
	include ../loading
span(ng-if='!loading')
	.panel.panel-default
		.panel-heading
			h3 Create room
				.pull-right
					button.btn.btn-sm.btn-default(ng-click='back()') &larr; Back
		.panel-body
			form(name='createRoomForm', novalidate)
				.form-group
					.input-group
						.input-group-addon # of players:
						input.form-control(type='number', ng-model='formData.players')
				.form-group
					input.form-control(type='text', ng-model='formData.nickname', placeholder='Nickname', required)
				.form-group
					.checkbox
						label
							input(type='checkbox', ng-model='formData.customRules')
							|  Custom game rules
				button.btn.btn-success(ng-click='$parent.createRoom()', ng-disabled='createRoomForm.$invalid') Create and join